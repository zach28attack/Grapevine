<table class= "table">
  <thead>
    <tr>
      <th>Macros</th>
      <th>Cals</th>
      <th>Protein</th>
      <th>Fats</th>
      <th>Carbs</th>
    </tr>
  </thead>
  <tr>
    <th>Target</th>
    <td> <%=current_user.cals_budget%>cal </td>
    <td> <%=current_user.protein_budget%>g </td>
    <td> <%=current_user.fats_budget%>g </td>
    <td> <%=current_user.carbs_budget%>g </td>
  </tr>
  <tr>
    <th>Food</th>
    <%if @calsEaten%>
      <td>-<%=@calsEaten%>cal</td>
    <%else%>
      <td>0</td>
    <%end%>
    <%if @proteinEaten%>
      <td>-<%=@proteinEaten%>g</td>
    <%else%>
      <td>0</td>
    <%end%>
    <%if @fatsEaten%>
      <td>-<%=@fatsEaten%>g</td>
    <%else%>
      <td>0</td>
    <%end%>
    <%if @carbsEaten%>
      <td>-<%=@carbsEaten%>g</td>
    <%else%>
      <td>0</td>
    <%end%>
    
  </tr>
  <tr>
    <th>Remaining</th>
    <% if @calsLeft <= 0 %>
      <td class="neg-macro"> <%=@calsLeft%>cal </td>
    <%else%>
      <td class="pos-macro"> <%=@calsLeft%>cal </td>
    <%end%>

    <% if @proteinLeft <= 0%>
      <td class="neg-macro"><%=@proteinLeft%>g </td>
    <%else%>
      <td class="pos-macro"> <%=@proteinLeft%>g </td>
    <%end%>

    <% if @fatsLeft <= 0%>
      <td class="neg-macro"><%=@fatsLeft%>g </td>
    <%else%>
      <td class="pos-macro"> <%=@fatsLeft%>g </td>
    <%end%>

    <% if @carbsLeft <= 0%>
      <td class="neg-macro"><%=@carbsLeft%>g </td>
    <%else%>
      <td class="pos-macro"> <%=@carbsLeft%>g </td>
    <%end%>
  </tr>
</table>
<%= pie_chart [
  ["Carbs", @carbsEaten],
  ["Protein" , @proteinEaten],
  ["Fats", @fatsEaten]
  ]%>

