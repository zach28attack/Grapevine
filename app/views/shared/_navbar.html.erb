<div class="navbar">
  <%= link_to "Grapevine", diaries_path, class:"nav nav-brand" %>
  <% if user_signed_in?%>
    <%= link_to "Profile", user_path(current_user), class:"nav nav-link" %>
    <%= link_to "Social", diaries_path, class:"nav nav-link" %>
    <%= link_to "Stats", diaries_path, class:"nav nav-link"%>
    <%= link_to "Logout",
              destroy_user_session_path,
              data: {turbo_method: :delete},
              class: "nav nav-link" %>
  <%elsif controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class:"nav nav-link"%>
  <%elsif devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class:"nav nav-link"%>
  <%end%>
</div>
